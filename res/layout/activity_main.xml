<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.apps.dom.msudoku.MainActivity">

    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/game_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black">
            <LinearLayout
                android:id="@+id/game_buttons"
                android:background="@color/dark_grey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_alignParentStart="true"

                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Menu"
                    android:textSize="15dp"
                    android:id="@+id/menu_button"
                    android:backgroundTint="@color/orange"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:onClick="menuButtonClick"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Check"
                    android:textSize="15dp"
                    android:id="@+id/check_button"
                    android:onClick="checkButtonClick"
                    android:backgroundTint="@color/orange"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/game_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">
                <GridLayout
                    android:id="@+id/grid"
                    android:background="@drawable/grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:columnCount="9"
                    android:rowCount="9"
                    android:layout_marginBottom="10dp"
                    />


                <LinearLayout
                    android:id="@+id/play_buttons1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/play_buttons2"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@color/dark_grey"

                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/but1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/orange"
                        android:onClick="valueButtonClick"
                        android:text="1"
                        android:textSize="15dp"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        />

                    <Button
                        android:id="@+id/but2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/orange"
                        android:onClick="valueButtonClick"
                        android:text="2"
                        android:textSize="15dp"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"/>

                    <Button
                        android:id="@+id/but3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/orange"
                        android:onClick="valueButtonClick"
                        android:text="3"
                        android:textSize="15dp"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"/>

                    <Button
                        android:id="@+id/but4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/orange"
                        android:onClick="valueButtonClick"
                        android:text="4"
                        android:textSize="15dp"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"/>

                    <Button
                        android:id="@+id/but5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/orange"
                        android:onClick="valueButtonClick"
                        android:text="5"
                        android:textSize="15dp"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/play_buttons2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="0dp"
                    android:background="@color/dark_grey"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/but6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/orange"
                        android:onClick="valueButtonClick"
                        android:text="6"
                        android:textSize="15dp" />

                    <Button
                        android:id="@+id/but7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/orange"
                        android:onClick="valueButtonClick"
                        android:text="7"
                        android:textSize="15dp" />

                    <Button
                        android:id="@+id/but8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/orange"
                        android:onClick="valueButtonClick"
                        android:text="8"
                        android:textSize="15dp" />

                    <Button
                        android:id="@+id/but9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/orange"
                        android:onClick="valueButtonClick"
                        android:text="9"
                        android:textSize="15dp" />

                    <Button
                        android:id="@+id/but0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/orange"
                        android:onClick="valueButtonClick"
                        android:text="\u232b"
                        android:textSize="15dp" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/menu_layout"
            android:background="@color/black"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="mSudoku"
                android:textAlignment="center"
                android:textSize="25dp"
                android:textColor="@color/orange"
                android:layout_marginBottom="0dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dev2"
                android:layout_marginTop="0dp"
                android:layout_gravity="center_horizontal"
                android:adjustViewBounds="true"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resume"
                android:textSize="15dp"
                android:backgroundTint="@color/orange"
                android:id="@+id/resume_button"
                android:onClick="resumeButtonClick"
                android:layout_weight="1"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/new_sudoku"
                android:textSize="15dp"
                android:backgroundTint="@color/orange"
                android:id="@+id/new_game_button"
                android:onClick="newSudokuButtonClick"
                android:layout_weight="1"
                />
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/clues_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/orange"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="CLUES : 31"
                    android:textSize="15dp"
                    android:id="@+id/clues"
                    android:gravity="center"
                    />
                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:id="@+id/seekBar"
                    android:secondaryProgressTint="@color/orange"
                    android:thumbTint="@color/orange"
                    android:backgroundTint="@color/orange"
                    android:progressBackgroundTint="@color/orange"
                    android:progressTint="@color/orange"
                    android:progress="0"
                    />


            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Custom game"
                android:textSize="15dp"
                android:id="@+id/custom_game_button"
                android:backgroundTint="@color/orange"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:onClick="customGameButtonClick"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Solve"
                android:textSize="15dp"
                android:backgroundTint="@color/orange"
                android:id="@+id/solve_button"
                android:layout_weight="1"
                android:onClick="solveButton"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
    </ViewFlipper>
</RelativeLayout>
